<h1>Editing <%=@household.name%></h1>

<form action="/households/<%=@household.id%>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <p>
    <label for="name">Household Name: </label>
    <input type="text" name="household[name]" id="name" value="<%=@household.name%>">
  </p>
  <p>
    <label for="address">Household Address: </label>
    <input type="text" name="household[address]" id="address" value="<%=@household.address%>">
  </p>
  <p>
    <label for="revenue">Household Revenue: </label>
    <input type="text" name="household[revenue]" id="revenue" value="<%=@household.revenue%>">
  </p>
  <input type="submit" value="Submit">

</form>
